@model MulltiplaJML.Models.Invent.Branch


@{
    ViewData["Title"] = "Nova Empresa";
    Layout = "~/Views/Shared/_AdminlteNetcoreCreate.cshtml";
    ViewData["EntityIcon"] = "fa fa-building-o";
    ViewData["CreateInfo"] = "Afiliado é uma saída para uma empresa. Para começar, você deve ter pelo menos um afiliado, como seu escritório principal ou sede.";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.11/jquery.mask.min.js"></script>

<div class="row">
    <div class="col-md-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="branchId" />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="branchName" class="control-label"></label>
                    <input asp-for="branchName" class="form-control" />
                    <span asp-validation-for="branchName" class="text-danger"></span>
                </div>
            </div>


            <div class="col-md-6">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="street1" class="control-label"></label>
                    <input asp-for="street1" class="form-control" />
                    <span asp-validation-for="street1" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="cnpj" class="control-label"></label>
                    <input asp-for="cnpj" class="form-control" placeholder="cnpj" id="cnpj" name="cnpj" />



                    <script type="text/javascript">
                         $("#cnpj").mask("99.999.999/9999-99");
                    </script>



                    <span asp-validation-for="cnpj" class="text-danger"></span>
                </div>


            </div>


            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="inscricaoestadual" class="control-label"></label>
                    <input asp-for="inscricaoestadual" class="form-control" placeholder="inscricaoestadual" id="inscricaoestadual" name="inscricaoestadual" />



                    <script type="text/javascript">
                         $("#inscricaoestadual").mask("999.999.999.999");
                    </script>



                    <span asp-validation-for="cnpj" class="text-danger"></span>
                </div>


            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="city" class="control-label"></label>
                    <input asp-for="city" class="form-control" />
                    <span asp-validation-for="city" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="province" class="control-label"></label>
                    <input asp-for="province" class="form-control" />
                    <span asp-validation-for="province" class="text-danger"></span>
                </div>
            </div>




        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="patchcertificado" class="control-label"></label>
                    <input asp-for="patchcertificado" class="form-control" />
                    <span asp-validation-for="patchcertificado" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label for="exampleInputFile">Abrir arquivo</label>
                    <input type="file" id="exampleInputFile">


                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="pwcertificado" class="control-label"></label>
                    <input type="password" asp-for="pwcertificado" class="form-control" maxlength="8" />
                    <span asp-validation-for="pwcertificado" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="isDefaultBranch" class="control-label"></label>
                    <div class="checkbox">
                        <input asp-for="isDefaultBranch" /> &nbsp; Sim.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles{

    <!-- iCheck -->
    <link rel="stylesheet" href="~/adminlte/plugins/iCheck/all.css" />

}

@section Scripts {

    <!-- iCheck -->
    <script src="~/adminlte/plugins/iCheck/icheck.min.js"></script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
    </script>


}
